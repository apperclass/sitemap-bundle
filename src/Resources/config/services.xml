<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- SITEMAP GENERATOR -->
        <service id="apperclass_sitemap.sitemap_generator" class="Apperclass\Bundle\SitemapBundle\Sitemap\SitemapGenerator">
            <argument type="service" id="apperclass_sitemap.sitemap_provider" />
        </service>

        <!-- SITEMAP PROVIDER -->
        <service id="apperclass_sitemap.sitemap_provider" class="Apperclass\Bundle\SitemapBundle\Sitemap\SitemapProvider" />

        <!-- SITEMAP XML ENCODER -->
        <service id="apperclass_sitemap.sitemap_xml_encoder" class="Apperclass\Bundle\SitemapBundle\Sitemap\SitemapXmlEncoder" />

        <!-- SITEMAP GENERATE COMMAND -->
        <service id="apperclass_sitemap.command.generate_sitemap_command"
                 class="Apperclass\Bundle\SitemapBundle\Command\SitemapGenerateCommand">
            <argument type="service" id="apperclass_sitemap.sitemap_generator" />
            <argument type="service" id="apperclass_sitemap.sitemap_xml_encoder" />
            <argument>%apperclass_sitemap.path%</argument>
            <tag name="console.command" />
        </service>

    </services>

</container>
